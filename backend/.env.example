# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI Organization ID
# OPENAI_ORG_ID=your_org_id_here

# Model Configuration
DEFAULT_MODEL=gpt-4o-mini
MAX_TOKENS=1000
TEMPERATURE=0.7

# Memory System Configuration
MEMORY_STORE_PATH=./memory_store
MEMORY_SIMILARITY_THRESHOLD=0.3
MEMORY_SEARCH_RESULTS=5
MEMORY_CONTEXT_HOURS=24
MEMORY_AUTO_SAVE_FREQUENCY=10

# Memory Vector Database Settings
MEMORY_VECTOR_DIMENSION=384
MEMORY_INDEX_TYPE=Flat
MEMORY_DEVICE=auto

# CUDA Configuration (for memory system acceleration)
# CUDA_VISIBLE_DEVICES=0
# USE_CUDA=true
